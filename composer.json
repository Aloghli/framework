{
    "name": "iceframework/framework",
    "description": "Simple and fast PHP framework delivered as C-extension",
    "keywords": ["extension", "php", "framework", "ice"],
    "homepage": "http://www.iceframework.org",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ice Team",
            "email": "info@iceframework.org"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3.5",
        "phalcon/zephir": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "git submodule --quiet update --init --recursive",
            "cd vendor/phalcon/zephir; ./unit-tests/ci/before_install.sh; ./install",
            "./vendor/bin/zephir generate",
            "cd ext; ./install; phpenv config-add ../tests/ci/ice.ini",
            "ulimit -c unlimited || true"
        ]
    }
}